<%= form_for(flights_path, method: :get) do %>

  Select the Airport from which you are departing:
  <%= select_tag(:from_airport, options_for_select(@from_options), class: "form-control") %>
  <br>
  Select the Airport at which you will be arriving:
  <%= select_tag(:to_airport, options_for_select(@to_options), class: "form-control") %>
  <br>
  Select the Date you will be traveling:
  <%= select_tag(:date, options_for_select(@dates), class: "form-control") %>
  <br>
  Select the number of passengers for your flight:
  <%= select_tag(:passengers, options_for_select(@passengers), class: "form-control") %>
  <br>
  <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
<% end %>
