<%= form_for(flights_path, method: :get) do %>

  Departing from:
  <%= select_tag(:from_airport, options_for_select(@from_options.collect { |airport| airport.name }), class: "form-control") %>
  <br>
  Arriving at:
  <%= select_tag(:to_airport, options_for_select(@to_options.collect { |airport| airport.name }), class: "form-control") %>
  <br>
  Departure date:
  <%= select_tag(:date, options_for_select(@date_options), class: "form-control") %>
  <br>
  Select the number of passengers for your flight:
  <%= select_tag(:passengers, options_for_select(@passengers), class: "form-control") %>
  <br>
  <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
<% end %>
