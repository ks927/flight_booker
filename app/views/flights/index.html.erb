<div class="container">  
  <h1>Find a Flight</h1>
    <div class="row">
    <div class="col-sm-6 search">
    <div class="form-group">
      <%= render 'form' %>
        </div>
        </div>
    </div>
</div>


<% unless @avail_flights.blank? %>
<div class="container available">
  <div class="row">
    <div class="col-md-10 available">
  <h3>Available Flights</h3>

        <table class="table table-hover">
         <thead>
           <th></th>
         <%= render 'thead' %>
        <%= form_tag(new_booking_path, method: :get) do %>
         </thead>
          <tbody>
          <% @avail_flights.each do |flight| %>
            <%= hidden_field_tag(:passengers, params[:passengers]) %>
            <tr>
              <td><%= radio_button_tag(:flight_id, flight.id) %></td>
              <td><%= flight.id %></td>
              <td><%= flight.date.strftime('%b %d, %Y') %></td>
              <td><%= flight.date.strftime('%I:%M%P') %></td>
              <td><%= flight.from_airport.name %></td>
              <td><%= flight.to_airport.name %></td>
              <td><%= flight.format_duration %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
   <%= submit_tag "Select", class: "btn btn-success" %>
<% end %>
<% end %>
    </div>
  </div>
</div>

