<div class="container">
<h3>Flight Details</h3>
    <div class="row">
        <div class="col-md-10 details">
        <table class="table table-responsive">
          <thead>
          <%= render 'flights/thead' %>
          </thead>
            <tr>
              <td><%= @flight.id %></td>
              <td><%= @flight.date.strftime('%b %d, %Y') %></td>
              <td><%= @flight.date.strftime('%I:%M%P') %></td>
              <td><%= @flight.from_airport.name %></td>
              <td><%= @flight.to_airport.name %></td>
              <td><%= @flight.format_duration %></td>
            </tr>
        </table>
        </div>
    </div>

<%= render 'personal' %>